<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <RelativeLayout
                android:id="@+id/header_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvGreeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good Morning,"
                    android:textSize="16sp"
                    android:textColor="#757575"/>

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvGreeting"
                    android:text="Raven Dark"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#1F1F1F"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/foodpanda"
                    android:background="@drawable/rounded_input"
                    android:padding="4dp"/>
            </RelativeLayout>

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/header_section"
                android:layout_marginTop="24dp"
                android:background="@drawable/rounded_input"
                android:hint="Find your food..."
                android:inputType="text"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:drawablePadding="12dp"
                android:textColorHint="#9E9E9E"
                android:textSize="14sp"/>

            <RelativeLayout
                android:id="@+id/promo_card"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/search_bar"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/primary_brand"
                android:background="@drawable/rounded_input">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get 30% OFF"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="On your first order"
                    android:textColor="#E0E0E0"
                    android:layout_marginTop="56dp"
                    android:layout_marginStart="24dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Order Now"
                    android:textSize="12sp"
                    android:textColor="@color/primary_brand"
                    android:backgroundTint="@android:color/white"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="16dp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvPopularTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/promo_card"
                android:layout_marginTop="32dp"
                android:text="Popular Fast-Food Restaurants"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1F1F1F"/>

            <RelativeLayout
                android:id="@+id/food_item_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvPopularTitle"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:background="@drawable/rounded_input">

                <ImageView
                    android:id="@+id/imgFood"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/mcdolibee" />

                <TextView
                    android:id="@+id/tvFoodName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/imgFood"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="Mcdolibee"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1F1F1F"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvFoodName"
                    android:layout_toEndOf="@id/imgFood"
                    android:layout_marginStart="16dp"
                    android:text="Chimken, Spajeti, Borgir"
                    android:textSize="14sp"
                    android:textColor="#757575"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/food_item_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/food_item_1"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:background="@drawable/rounded_input">

                <ImageView
                    android:id="@+id/imgFood2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/mangkanor"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tvFoodName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/imgFood2"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="Mang Kanor"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1F1F1F"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvFoodName2"
                    android:layout_toEndOf="@id/imgFood2"
                    android:layout_marginStart="16dp"
                    android:text="Inasal, Halo-halo"
                    android:textSize="14sp"
                    android:textColor="#757575"/>

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>